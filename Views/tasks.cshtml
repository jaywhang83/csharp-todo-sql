
<h1>To Do List</h1>
@if(@Model.Count == 0)
{
  <p>No tasks have been added yet!</p>
}
else
{
  <h1>Here is your list of tasks:</h1>
  <ul>
    @foreach(var task in Model)
    {
      <li><a href="/tasks/@task.GetId()">@task.GetDescription()</a> | @task.GetDueDate()
      <form action="/task/view/completed" method="post">
        <input type="hidden" name="_method" value="PATCH">
          <input name="task-id" type="hidden" value="@task.GetId()">
        <input type="checkbox" value="true" name="task-completed"/>Task completed
        <button type="submit">Submit completed task</button>
      </form>
      </li>
    }
  </ul>
  <form action="/tasks/delete" method="post">
    <button type="submit">Clear all tasks</button>
  </form>
}
<p><a href="/tasks/new">Add a new task</a></p>
<p><a href="/">Return home</a></p>
