
<h1>To Do List</h1>
<hr />
<h2>Edit task: @Model.GetDescription()</h2>
<form action="/task/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="task-id" type="hidden" value="@Model.GetId()">
  <label for="task-description">Task Description</label>
  <input id="task-description" name="task-description" type="text" value="@Model.GetDescription()">
  <label for="task-dueDate">Task Due Date</label>
  <input id="task-dueDate" name="task-dueDate" type="text" value="@Model.GetDueDate()">
  <!-- <input type="hidden" value="@Model.GetIsDone()" name="task-completed"/> -->
  <input type="checkbox" value="true" name="task-completed" />Task completed
  <button type="submit">Submit</button>
</form>
<h4><a href="/">Return home</a></h4>
